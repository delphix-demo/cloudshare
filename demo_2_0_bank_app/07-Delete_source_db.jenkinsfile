pipeline {

   agent { label 'devops' }
   stages {
      stage('Delete source DB tables') {
         agent { label 'devops' }
         steps {
            sh """
            psql -p 5432 -h 10.160.1.29 -U postgres -d delphixdb <<EOF 
DROP USER IF EXISTS digitaluser;
DROP DATABASE IF EXISTS digitalbank;
EOF
"""
         }
      }
   }
}
